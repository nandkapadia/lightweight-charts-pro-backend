# Environment Configuration Example
# Copy this file to .env and update values for your deployment

# =============================================================================
# Application Settings
# =============================================================================
APP_NAME=Lightweight Charts Pro Backend
ENVIRONMENT=development  # Options: development, staging, production
DEBUG=false
LOG_LEVEL=INFO  # Options: DEBUG, INFO, WARNING, ERROR, CRITICAL

# =============================================================================
# Server Settings
# =============================================================================
HOST=0.0.0.0
PORT=8000

# =============================================================================
# CORS Settings
# =============================================================================
# Comma-separated list of allowed origins
# Development default: http://localhost:3000,http://localhost:8501
# Production example: https://yourdomain.com,https://app.yourdomain.com
CORS_ORIGINS=http://localhost:3000,http://localhost:8501

# =============================================================================
# Security Settings
# =============================================================================
# IMPORTANT: Generate a strong secret key for production!
# You can generate one with: openssl rand -hex 32
SECRET_KEY=dev-secret-key-change-in-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# =============================================================================
# Authentication
# =============================================================================
# Enable authentication (HIGHLY RECOMMENDED for production)
ENABLE_AUTH=false
API_KEY_HEADER=X-API-Key

# =============================================================================
# Rate Limiting
# =============================================================================
ENABLE_RATE_LIMITING=true
RATE_LIMIT_PER_MINUTE=60
RATE_LIMIT_HISTORY_PER_MINUTE=30

# =============================================================================
# Database Settings
# =============================================================================
# SQLite (default for development)
DATABASE_URL=sqlite+aiosqlite:///./charts.db

# PostgreSQL (recommended for production)
# DATABASE_URL=postgresql+asyncpg://user:password@localhost:5432/charts_db

# MySQL/MariaDB
# DATABASE_URL=mysql+aiomysql://user:password@localhost:3306/charts_db

DATABASE_ECHO=false  # Set to true to see SQL queries in logs

# =============================================================================
# Data Management
# =============================================================================
# Enable database persistence (false = in-memory only)
ENABLE_PERSISTENCE=false
CHART_TTL_HOURS=24
CLEANUP_INTERVAL_MINUTES=60

# =============================================================================
# WebSocket Settings
# =============================================================================
WEBSOCKET_TIMEOUT_SECONDS=300
WEBSOCKET_PING_INTERVAL_SECONDS=30

# =============================================================================
# Monitoring
# =============================================================================
ENABLE_METRICS=true
METRICS_PATH=/metrics
